<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/neutrif_pro</item>
        <item name="android:datePickerStyle">@style/MyDatePickerStyle</item>
    </style>


    <style name="MyDatePickerStyle" parent="@android:style/Widget.DeviceDefault.DatePicker">
        <item name="android:dateTextAppearance">@style/MyDatePickerTextAppearance</item>
    </style>

    <style name="MyDatePickerTextAppearance" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@drawable/date_picker_text_color_selector</item>
    </style>

    <style name="BlackText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="RedText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorRed</item>
    </style>

    <style name="WhiteText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="GreenText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorGreen</item>
    </style>

    <style name="GreyText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorGrey</item>
    </style>

    <style name="DarkGreyText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorDarkGrey</item>
    </style>

    <style name="BlackBoldText" parent="BlackText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/neutrif_pro_semibold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WhiteBoldText" parent="WhiteText">
        <item name="android:fontFamily">@font/neutrif_pro_semibold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WhiteBold12Text" parent="WhiteBoldText">
        <item name="android:textSize">@dimen/text_12</item>
    </style>

    <style name="WhiteBold14Text" parent="WhiteBoldText">
