    <style name="NotificationBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:colorBackground">@android:color/transparent</item>
    </style>

    <style name="PlaceBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:colorBackground">@android:color/transparent</item>
    </style>

    <style name="DialogAnimationBounce">
        <item name="android:windowEnterAnimation">@anim/anim_slideup_bounce</item>
        <item name="android:windowExitAnimation">@anim/anim_slide_down</item>
    </style>

    <style name="SwitchCompat">
        <item name="android:trackTint">@color/colorGrey</item>
        <item name="android:thumbTint">@color/white</item>
    </style>

</resources>
