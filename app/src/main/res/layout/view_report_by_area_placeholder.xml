<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/view_1"
            android:layout_width="@dimen/space_200"
            android:layout_height="@dimen/space_24"
            android:layout_marginStart="@dimen/space_24"
            android:layout_marginTop="@dimen/space_16"
            android:layout_marginEnd="@dimen/space_32"
            android:background="@drawable/bg_placeholder"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_2"
            android:layout_width="0dp"
            android:layout_height="@dimen/space_24"
            android:layout_marginStart="@dimen/space_24"
            android:layout_marginTop="@dimen/space_16"
            android:layout_marginEnd="@dimen/space_24"
            android:background="@drawable/bg_placeholder"
            app:layout_constraintLeft_toRightOf="@+id/view_3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_1" />

        <View
            android:id="@+id/view_3"
            android:layout_width="0dp"
            android:layout_height="@dimen/space_24"
            android:layout_marginStart="@dimen/space_24"
            android:layout_marginTop="@dimen/space_16"
            android:layout_marginEnd="@dimen/space_24"
            android:background="@drawable/bg_placeholder"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/view_2"
            app:layout_constraintTop_toBottomOf="@+id/view_1" />

        <LinearLayout
            android:id="@+id/view_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_24"
            android:layout_marginTop="@dimen/space_16"
            android:layout_marginEnd="@dimen/space_24"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/view_3">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="@dimen/space_150"
                android:layout_marginEnd="@dimen/space_16"
                android:layout_weight="1"
                android:background="@drawable/bg_placeholder"
                app:cardBackgroundColor="@color/colorGrey"
                app:cardCornerRadius="@dimen/space_16"
                app:cardElevation="@dimen/space_0" />

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="@dimen/space_150"
                android:layout_marginEnd="@dimen/space_16"
                android:layout_weight="1"
                android:background="@drawable/bg_placeholder"
                app:cardBackgroundColor="@color/colorGrey"
                app:cardCornerRadius="@dimen/space_16"
                app:cardElevation="@dimen/space_0" />

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="@dimen/space_150"
                android:layout_marginEnd="@dimen/space_16"
                android:layout_weight="1"
                android:background="@drawable/bg_placeholder"
                app:cardBackgroundColor="@color/colorGrey"
                app:cardCornerRadius="@dimen/space_16"
                app:cardElevation="@dimen/space_0" />

        </LinearLayout>

        <View
            android:id="@+id/view_5"
            style="@style/BlackBold16Text"
            android:layout_width="@dimen/space_200"
            android:layout_height="@dimen/space_16"
            android:layout_marginTop="@dimen/space_16"
            android:background="@drawable/bg_placeholder"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_4" />

        <View
            android:id="@+id/view_6"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_200"
            android:layout_marginTop="@dimen/space_16"
            android:background="@drawable/bg_placeholder"
            android:layout_marginStart="@dimen/space_24"
            android:layout_marginEnd="@dimen/space_24"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_5" />

        <TextView
            android:id="@+id/view_7"
            android:layout_width="@dimen/space_200"
            android:layout_height="@dimen/space_16"
            android:layout_marginTop="@dimen/space_16"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_6"
            android:background="@drawable/bg_placeholder" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/view_8"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_6"
            android:layout_marginTop="@dimen/space_8"
            app:layout_constraintTop_toBottomOf="@+id/view_7"
            app:tabIndicator="@drawable/bg_indicator"
            app:tabIndicatorColor="@color/colorGreen"
            app:tabIndicatorFullWidth="false"
            app:tabIndicatorHeight="@dimen/space_6" />

        <View
            android:id="@+id/view_9"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_200"
            android:background="@drawable/bg_placeholder"
            android:layout_marginStart="@dimen/space_24"
            android:layout_marginEnd="@dimen/space_24"
            app:layout_constraintTop_toBottomOf="@+id/view_8"
            tools:layout_editor_absoluteX="0dp" />
        
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
